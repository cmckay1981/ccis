      "highContrast": true,
      "nightMode": "Red-shifted for night operations"
    },
    "integration": {
      "wellDataFeed": "Live well data injection into procedures",
      "notificationAlerts": "Updates pushed to users",
      "auditTrail": "Track document access and acknowledgments"
    }
  },
