      "category": "reference",
      "priority": 3,
      "content": {
        "issues": [
          {
            "problem": "Choke plugged",
            "action": "Switch to backup choke, isolate & clear"
          },
          {
            "problem": "Flow meter signal loss",
            "action": "High gas % - normal during gas circulation"
          },
          {
            "problem": "RCD leak",
            "action": "Reduce SBP if safe, change element"
          },
          {
            "problem": "P@D not holding",
            "action": "Check model calibration, switch to SBP"
          },
          {
            "problem": "System reverts to Manual",
            "action": "Limits reached - prepare BOP closure"
          }
        ]
      },
