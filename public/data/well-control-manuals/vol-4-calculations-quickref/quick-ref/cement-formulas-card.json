{
  "cardId": "cement-formulas",
  "title": "Cement Calculations Quick Reference",
  "type": "reference-card",
  "content": {
    "capacityFormulas": {
      "title": "CAPACITY FORMULAS",
      "formulas": [
        {
          "name": "Pipe/Hole Capacity",
          "formula": "Capacity (bbl/ft) = ID² / 1029.4",
          "example": "9-5/8\" casing (8.835\" ID): 8.835² / 1029.4 = 0.0758 bbl/ft"
        },
        {
          "name": "Annular Capacity",
          "formula": "Capacity (bbl/ft) = (Hole ID² - Pipe OD²) / 1029.4",
          "example": "12.25\" hole, 9-5/8\" csg: (12.25² - 9.625²) / 1029.4 = 0.0558 bbl/ft"
        },
        {
          "name": "Pipe Displacement",
          "formula": "Displacement (bbl/ft) = (OD² - ID²) / 1029.4",
          "example": "5\" DP (4.276\" ID): (5² - 4.276²) / 1029.4 = 0.0066 bbl/ft"
        }
      ]
    },
    "volumeFormulas": {
      "title": "VOLUME CALCULATIONS",
      "formulas": [
        {
          "name": "Volume",
          "formula": "Volume (bbl) = Capacity (bbl/ft) × Length (ft)"
        },
        {
          "name": "Barrels to Cubic Feet",
          "formula": "ft³ = bbl × 5.615"
        },
        {
          "name": "Cubic Feet to Barrels",
          "formula": "bbl = ft³ / 5.615"
        },
        {
          "name": "Sacks Required",
          "formula": "Sacks = Volume (ft³) / Yield (ft³/sk)",
          "note": "Or: Sacks = Volume (bbl) × 5.615 / Yield (ft³/sk)"
        }
      ]
    },
    "slurryCalculations": {
      "title": "SLURRY CALCULATIONS",
      "formulas": [
        {
          "name": "Water Required",
          "formula": "Water (gal) = Sacks × Water Req (gal/sk)"
        },
        {
          "name": "Slurry Volume from Sacks",
          "formula": "Volume (ft³) = Sacks × Yield (ft³/sk)"
        },
        {
          "name": "Mix Water Volume",
          "formula": "Mix Water (bbl) = Water (gal) / 42"
        }
      ]
    },
    "pressureFormulas": {
      "title": "PRESSURE CALCULATIONS",
      "formulas": [
        {
          "name": "Hydrostatic Pressure",
          "formula": "HP (psi) = Density (ppg) × 0.052 × TVD (ft)"
        },
        {
          "name": "ECD",
          "formula": "ECD (ppg) = BHP (psi) / 0.052 / TVD (ft)"
        },
        {
          "name": "Pressure Gradient",
          "formula": "Gradient (psi/ft) = Density (ppg) × 0.052"
        }
      ]
    },
    "pumpFormulas": {
      "title": "PUMP CALCULATIONS",
      "formulas": [
        {
          "name": "Pump Time",
          "formula": "Time (min) = Volume (bbl) / Rate (bpm)"
        },
        {
          "name": "Strokes",
          "formula": "Strokes = Volume (bbl) / Output (bbl/stk)"
        },
        {
          "name": "Rate from Strokes",
          "formula": "Rate (bpm) = SPM × Output (bbl/stk)"
        }
      ]
    },
    "balancedPlugFormulas": {
      "title": "BALANCED PLUG",
      "formulas": [
        {
          "name": "Pipe Depth for Balance",
          "formula": "Pipe End = Plug Bottom + [Plug Vol × Ann Cap / (Ann Cap + Pipe Cap)]"
        },
        {
          "name": "Displacement to Balance",
          "formula": "Displacement = Pipe Vol to End - Cement in Pipe"
        }
      ]
    },
